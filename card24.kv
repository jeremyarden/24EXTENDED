#kivy 1.0

#:set src '/Users/abiyyuismunandar/Documents/Stima/24CardGame/Images/'
<ShownCard@Button>:
    text_size: self.size
    font_size: '25sp'
    markup: True

<ShownImg@Image>:
    source: src + 'green_back.png'
    x: self.parent.x
    y: self.parent.y
    size: self.parent.size
    allow_stretch: True

<InputCard@Button>:
    text_size: self.size
    font_size: '15sp'
    size_hint: 1,1
    markup: True

<InpImg@Image>:
	x: self.parent.x 
	y: self.parent.y
	size: self.parent.size
    allow_stretch: True

<Card24>:
   
