#:kivy 1.0.9

<ShownCard@Image>:
	allow_stretch: True
	size: self.parent.size

<InputCard@Button>:
    text_size: self.size
    font_size: '15sp'
    size_hint: 1,1
    markup: True

<InpImg@Image>:
	x: self.parent.x 
	y: self.parent.y
	size: self.parent.size
    allow_stretch: True

<Card24>:
    BoxLayout:

        orientation: 'vertical'
        padding: 20

        BoxLayout:
			orientation: 'horizontal'
            padding: 10
			source_image: self.source_image

            ShownCard:
                id: shown1
				source: root.source_image
            ShownCard:
                id: shown2
				source: root.source_image
            ShownCard:
                id: shown3
				source: root.source_image
            ShownCard:
                id: shown4
				source: root.source_image
	    
		BoxLayout:

	        orientation: 'horizontal'
	        padding: 20

	        GridLayout:

	            cols: 7
	            padding: 5

	            size_hint: 1,0.65

	            InputCard:
	                InpImg:
	                    source: 'AS.png'
	                

	            InputCard:
	                InpImg:
	                    source: '2S.png'

	            InputCard:
	                InpImg:
	                    source: '3S.png'

	            InputCard:
	                InpImg:
	                    source: '4S.png'

	            InputCard:
	                InpImg:
	                    source: '5S.png'	

	            InputCard:
	                InpImg:
	                    source: '6S.png'

	            InputCard:
	                InpImg:
	                    source: '7S.png'

	            InputCard:
	                InpImg:
	                    source: '8S.png'

	            InputCard:
	                InpImg:
	                    source: '9S.png'

	            InputCard:
	                InpImg:
	                    source: '10S.png'

	            InputCard:
	                InpImg:
	                    source: 'JS.png'

	            InputCard:
	                InpImg:
	                    source: 'QS.png'

	            InputCard:
	                InpImg:
	                    source: 'KS.png'

	            InputCard:
	                InpImg:
	                    source: 'green_back.png'

	        BoxLayout:

	            orientation: 'vertical'
	            padding: 5

	            Label:
					text: 'Answer'
				Label:
					id: answer_label
					text: ''
	            Label: 
					text: 'Point'
				Label:
					id: point_label
					text: ''
	            Button:
	                text: 'Solve'
					on_press: root.update()
				Button:
					id: play_button
					text: 'Play'
					on_press: root.startgame()
				Button:
					id: exit_button
					text: 'Exit'
					on_press: root.exit()